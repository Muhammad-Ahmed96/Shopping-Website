
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@model System.Collections.ArrayList
<h2>Account</h2>

@{
    for (int i = 0; i < Model.Count;i++ )
    { 
<div class="container">
    <div style="display:flex;flex-direction:row">
        <div class="col-lg-4" style="border:solid 1px black;padding:20px">
            <h2 class="text-center text-primary">Personal Info</h2>
            <form class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" id="email_txt" value="@Model[i++]"/>
                <label>Name</label>
                <input type="text" class="form-control" id="name_txt" value="@Model[i++]" />
                <label>Address</label>
                <input type="text" class="form-control" id="address_txt" value="@Model[i++]" />
                <label>Country</label>
                <input type="text" class="form-control" id="country_txt" value="@Model[i++]" />
                <label>City</label>
                <input type="text" class="form-control" id="city_txt" value="@Model[i++]" />
                <label>Phone No</label>
                <input type="text" class="form-control" id="phone_txt" value="@Model[i++]" />
                <label>Gender</label>
                <select class="form-control">
                @if (Model[i++].Equals("male")) { 
                    <option selected>Male</option>
                     <option>Female</option>
                }
                else
                {
                    <option>Male</option>
                     <option selected>Female</option>
                }
                   
                </select><br />
                <div>
                    <button type="submit" class="btn btn-info btn-block">Update Info</button>
                </div>
            </form>
        </div>
        <div class="col-lg-4" style="border:solid 1px black;padding:20px">
            <h2 class="text-center text-success">Account Info</h2>
            <form class="form-group">
                <label>Credit Card No#</label>
                <input type="text" class="form-control" value="@Model[i++]" />
                <label>Current Balance</label>
                <input type="text" class="form-control disabled" value="@Model[i++]" />
                <br />
                <button type="submit" class="btn btn-success btn-block">Update Info</button> 
            </form>
        </div>
        <div class="col-lg-4" style="border:solid 1px black;padding:20px">
            <h2 class="text-center text-danger">Password Info</h2>
            <form>
                <label>Old Password</label>
                <input type="password" class="form-control" />
                <label>New Password</label>
                <input type="password" class="form-control" />
                <label>Confirm New Password</label>
                <input type="password" class="form-control" />
                <br />
                <button type="submit" class="btn btn-danger btn-block">Update Password</button>
            </form>
        </div>
    </div>
</div>
    }
    }